<h1>{{t 'login.title'}}</h1>
<div class="container">
  <div class="panel panel-default col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
    <div class="panel-body">
      {{t 'login.username'}}
      <br/>
      {{input type="text" value=username}}
      <br />
      {{t 'login.password'}}
      <br/>
      {{input type="text" value=password}}
      <br />
      <button class="btn btn-primary" {{action 'login'}}>{{t 'login.login_action'}}</button>
    </div>
  </div>
</div>