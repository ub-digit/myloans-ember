<div id="login-spinner">
  <i class="fa fa-spinner fa-spin"></i>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h2>{{t 'login.title'}}</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-2">
      <p class="lead">{{t 'login.info'}}</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <form {{action 'login'  on="submit"}}>
        <div class="form-group">
          <label for="username">{{t 'login.username'}}</label>
          {{input value=username type="text" class="form-control" id="username" placeholderTranslation="login.username"}}
        </div>
        <div class="form-group">
          <label for="password">{{t 'login.password'}}</label>
          {{input value=password type="password" class="form-control" id="password" placeholderTranslation="login.password"}}
        </div>
        <button type="submit" class="btn btn-primary">{{t 'login.login_action'}}</button>
      </form>
    </div>
  </div>
</div>



