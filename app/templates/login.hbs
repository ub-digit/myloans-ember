

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h2>{{t 'login.title'}}</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-md-offset-2">
      <p class="lead">{{t 'login.info'}}</p>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <form>
        <div class="form-group">
          <label for="exampleInputEmail1">{{t 'login.username'}}</label>
          {{input value=username type="email" class="form-control" id="exampleInputEmail1" placeholderTranslation="login.username"}}
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">{{t 'login.password'}}</label>
          {{input value=password type="password" class="form-control" id="exampleInputPassword1" placeholderTranslation="login.password"}}
        </div>
        <button type="button" class="btn btn-primary" {{action 'login'}}>{{t 'login.login_action'}}</button>
      </form>
    </div>
  </div>
</div>



